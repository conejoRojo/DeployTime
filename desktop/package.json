{
  "name": "deploytime",
  "productName": "DeployTime",
  "version": "1.0.0",
  "description": "Time tracking application for Windows 11",
  "main": "main.js",
  "author": "DeployTime Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:127.0.0.1:3001 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "build:renderer": "vite build",
    "build:main": "tsc src/main/main.ts --outDir dist/main --module commonjs --target ES2020 --esModuleInterop --skipLibCheck",
    "build:preload": "tsc src/preload/preload.ts --outDir dist/preload --module commonjs --target ES2020 --esModuleInterop --skipLibCheck",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.deploytime.app",
    "productName": "DeployTime",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "tray-icon.png",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}